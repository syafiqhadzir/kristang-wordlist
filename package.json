{
  "name": "kristang-wordlist",
  "version": "1.0.0",
  "description": "Kristang wordlist. Released under GPLv3.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "mcm_MY.dic",
    "mcm_MY.aff"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SyafiqHadzir/kristang-wordlist.git"
  },
  "keywords": [],
  "author": "Syafiq Hadzir <syafiqhadzir@live.com.my> (https://syafiqhadzir.dev)",
  "contributors": [
    "Syafiq Hadzir <syafiqhadzir@live.com.my> (https://syafiqhadzir.dev)"
  ],
  "license": "GPL-3.0",
  "homepage": "https://github.com/SyafiqHadzir/kristang-wordlist",
  "scripts": {
    "prepare": "husky install",
    "sort": "ts-node scripts/sort-wordlist.ts",
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "prebuild": "npm run sort",
    "test": "vitest run",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "semantic-release": "semantic-release"
  },
  "lint-staged": {
    "*.{ts,js,json,md,yml}": [
      "prettier --write"
    ],
    "mcm_MY.dic": [
      "ts-node scripts/sort-wordlist.ts",
      "git add"
    ]
  },
  "release": {
    "branches": [
      "main",
      "master"
    ]
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "semantic-release": "^24.2.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.5",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8"
  }
}
